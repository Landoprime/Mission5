@{
    ViewData["Title"] = "Request a BBQ Class";
}
<h1>@ViewData["Title"]</h1>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<h2>BBQ Class Sign Up</h2>
<div class="rate-container">
    <div class="rate-box">
        <h3>Hourly Rate</h3>
        <div class="rate-value">$1000</div>
    </div>
</div>

<form id="quoteForm">
    <label for="firstName">First Name</label>
    <input type="text" id="firstName" name="firstName" required>
    <br />
    <label for="lastName">Last Name</label>
    <input type="text" id="lastName" name="lastName" required>
    <br>
    <label for="hours">How Many Hours Would You Like To Take My Class For?</label>
    <input type="number" id="hours" name="hours" required min="0">
    <br>
    <input type="submit" value="Request Quote" id="btnSubmit"/>
</form>

<div id="output"></div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> 



